<odoo>
<!--Definition de la vue-->

 <record model="ir.ui.view" id="hr_payslip_form">
	<field name="name">hr.payslip.form</field>
	<field name="model">hr.payslip</field>
    <field name="inherit_id" ref="hr_payroll.view_hr_payslip_form"/>
	<field name="arch" type="xml">
	<notebook>
			<!--<page string = 'Commentaire' groups = 'Gestion_Paie.Gestion_Paie_controleur'>
				<field name="commentaire" placeholder="Faites vos observations ici..."/>
				<group><field name="verifications" style="width:30%"/></group>

			</page>-->
	</notebook>
		
	<xpath expr="//field[@name='name']" position="after">
	     <field name = "current_user" options="{'no_open': True}"/>
	</xpath>
	
	<xpath expr="//field[@name='current_user']" position="attributes">
	     <attribute name = "invisible">True</attribute>
	</xpath>
	
	<xpath expr="//field[@name='credit_note']" position="attributes">
	     <attribute name = "invisible">True</attribute>
	</xpath>
	
	<xpath expr="//page[1]" position="attributes">
		  <attribute name = "invisible">True</attribute>
	</xpath>
	
	<xpath expr="//page[4]" position="attributes">
		  <attribute name = "invisible">True</attribute>
	</xpath>
	
	<xpath expr="//field[@name='struct_id']" position="attributes">
	     <attribute name = "invisible">True</attribute>
	</xpath>
	
	
		
  </field>
</record>


<!--Definition de la vue tree-->

 <record model="ir.ui.view" id="hr_payslip_tree">
	<field name="name">hr.payslip.tree</field>
	<field name="model">hr.payslip</field>
